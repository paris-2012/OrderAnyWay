<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bright_orange"
    tools:context=".view.RegistrationActivity">

    <TextView
        android:id="@+id/title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        android:textSize="40dp"
        android:text="LOGIN"
        android:layout_centerInParent="true"
        android:textColor="@color/white"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/registrationContainer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@+id/title"/>

    <TextView
        android:id="@+id/txtSelectLoginMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Login Method:"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/registrationContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnEmailLogin"
        android:scaleType="centerCrop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/_81769"
        android:background="#00000000"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/txtSelectLoginMethod"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnPhoneLogin"
        android:scaleType="centerCrop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_phone_android_24"
        android:background="#00000000"
        app:layout_constraintTop_toTopOf="@+id/btnEmailLogin"
        app:layout_constraintStart_toEndOf="@+id/btnEmailLogin"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnGoogleLogin"
        android:scaleType="centerCrop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#00000000"
        android:src="@drawable/_991148"
        app:layout_constraintEnd_toStartOf="@id/btnEmailLogin"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintTop_toTopOf="@+id/btnEmailLogin"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/testSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in_as_guest"
        android:padding="@dimen/_10dp"
        android:layout_marginTop="@dimen/_20dp"
        android:background="@drawable/allrounded_edittext"
        app:layout_constraintTop_toBottomOf="@+id/btnEmailLogin"
        app:layout_constraintStart_toStartOf="@+id/btnEmailLogin"
        app:layout_constraintEnd_toEndOf="@+id/btnEmailLogin"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/txtNotRegistered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/txtLinkToRegistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Click here to Register"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/txtNotRegistered"
            android:textColor="#FCA503"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>