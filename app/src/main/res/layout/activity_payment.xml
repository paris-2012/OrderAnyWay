<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/imgPayment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300dp"
        android:src="@drawable/payment_on_mobile"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-50dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/payment_title"
        app:layout_constraintTop_toBottomOf="@+id/imgPayment"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/_30sp"
        android:textColor="@color/bright_orange"
        android:textStyle="bold"/>
    <RadioGroup
        android:id="@+id/radioPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle">
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioBtnCredit"
            android:layout_width="@dimen/_120dp"
            android:layout_height="wrap_content"
            android:text="@string/credit"
            android:checked="true"
            android:buttonTint="@color/bright_orange"/>
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioBtnCash"
            android:layout_width="@dimen/_120dp"
            android:layout_height="wrap_content"
            android:text="@string/cash"
            android:buttonTint="@color/bright_orange"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioBtnGooglePay"
            android:layout_width="@dimen/_120dp"
            android:layout_height="wrap_content"
            android:text="@string/google_pay"
            android:buttonTint="@color/bright_orange"/>
    </RadioGroup>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bright_orange"
        android:text="@string/confirm"
        android:textSize="@dimen/_25sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>